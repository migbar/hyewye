%li.clearfix.event.answer{:id => html[:id] || dom_id(answer), :style => html[:style]}
  .avatar
    = link_to image_tag(user.avatar), user_path(user)
  .content
    %span.author= link_to h(user), user_path(user)
    said:
    %span.choice= "#{answer.choice_name},"
    %span.body= h answer
  .links
    - unless defined?(hide_link)
      = link_to "Answer", question_answers_path(answer.question)