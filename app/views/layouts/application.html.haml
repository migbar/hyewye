!!!
%html{html_attrs}
  %head
    = title_tag
    %meta{"http-equiv"=>"Content-type", :content=>"text/html; charset=utf-8"}
    = stylesheet_link_tag 'reset-fonts-grids', 'master', 'formtastic', 'formtastic_changes'
    = javascript_include_tag 'jquery', 'application'
    = yield(:head)
  %body
    #doc5
      #hd{ :class => current_user ? "signed_in" : "guest"}
        = render :partial => "shared/header"
      #bd
        #container
          #main-content
            - if show_title?
              %h2= h yield(:title)
            = render :partial => "shared/flash", :object => flash
            .clearfix
              = yield
      #ft
        = render :partial => "shared/footer"
    = GOOGLE_ANALYTICS