- title "Homepage"
#right-col
  #nav
    = link_to "ask a question", new_question_path

#left-col
  %table#stream
    %tr
      %th User
      %th Event
      %th
      %th

    - present_events(@events).each do |event|
      %tr{ :id => event.dom_id, :class => event.dom_class }
        %td= event.link_to_user
        %td= h event.body 
        %td<
          - event.when_answer do
            = event.choice
        %td= event.link_to_question("answer")
.clear

      